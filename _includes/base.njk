<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>{{ title or "My Blog" }}</title>
<link rel="icon" type="image/png" href="/images/fav.png">

<link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism-tomorrow.min.css" rel="stylesheet" />

<style>

/* Hapus CSS di sini dan letakkan di file CSS eksternal jika proyek lebih besar */
/* Namun, karena ini adalah contoh minimal, saya membiarkannya di sini */

html {
    scroll-behavior: smooth;
}

html, body {
    margin: 0;
    padding: 0;
}
* {
    box-sizing: border-box;
}

body {
    overflow-x: hidden;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    background-color: #ffffff;
    color: #000000;
    transition: background-color 0.5s ease, color 0.5s ease;
}

.main-container {
    width: 100%;
    max-width: 800px;
    margin: 20px auto;
    padding: 0 15px;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
}

.header-content {
    flex-grow: 1;
}

.header-sticky-wrapper {
    position: sticky;
    top: 0;
    z-index: 5;
    background-color: #ffffff;
    transition: background-color 0.5s ease;
}

.main-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: 0 15px;
    margin-bottom: 15px;
}

.typing-container {
    font-size: 1.3rem;
    white-space: nowrap;
    overflow: hidden;
    font-weight: 300;
    transition: color 0.5s ease;
    display: flex;
    align-items: center;
}

.cursor {
    display: inline-block;
    width: 2px;
    height: 1.3rem;
    background-color: currentColor;
    margin-left: 2px;
    animation: blink 0.7s infinite;
    transition: background-color 0.5s ease;
}

.theme-toggle {
    background: none;
    border: none;
    cursor: pointer;
    z-index: 10;
    padding: 0;
}

.theme-toggle svg {
    height: 1.2rem;
    width: 1.2rem;
    color: #000;
    transition: color 0.5s ease;
}

.dark-mode .theme-toggle svg {
    color: #fff;
}

@keyframes blink {
    0%, 50%, 100% { opacity: 0; }
    25%, 75% { opacity: 1; }
}

.divider {
    border: 0;
    height: 1px;
    background-color: #ccc;
    width: 100%;
    margin: 10px 0;
    transition: background-color 0.5s ease;
}

.highlight {
    background-color: #ffeb3b;
    padding: 2px 4px;
    border-radius: 4px;
    color: #000;
    transition: background-color 0.3s ease;
}

.highlight-yellow {
    background-color: #ffeb3b;
    color: #000;
    padding: 2px 4px; 
    border-radius: 4px; 
}

.highlight-green {
    background-color: #4caf50;
    color: #fff;
    padding: 2px 4px; 
    border-radius: 4px; 
}

.highlight-blue {
    background-color: #2196f3;
    color: #fff;
    padding: 2px 4px; 
    border-radius: 4px; 
}

.highlight-orange {
    background-color: #ff9800;
    color: #fff;
    padding: 2px 4px; 
    border-radius: 4px; 
}

.dark-mode .highlight-yellow {
    background-color: #fbc02d;
    color: #000;
}

.dark-mode .highlight-green {
    background-color: #388e3c;
    color: #fff;
}

.dark-mode .highlight-blue {
    background-color: #1976d2;
    color: #fff;
}

.dark-mode .highlight-pink {
    background-color: #c2185b;
    color: #fff;
}

.dark-mode .highlight-orange {
    background-color: #f57c00;
    color: #fff;
}

/* Aturan UNTUK LINK: Tanpa Garis Bawah, Warna Dinamis, dan Highlight */
/* ---------------------------------------------------------------- */

/* Aturan Link Biasa (Hitam di Terang, Putih di Gelap, Tanpa Garis Bawah) */
a:not(footer a) {
    color: #ff0000; /* Hitam untuk mode terang */
    text-decoration: none;  
    transition: color 0.5s ease;
}

.dark-mode a:not(footer a) {
    color: #ffeb3b; /* Putih untuk mode gelap */
}


/* Tambahkan atau pastikan blok ini ada dan benar */
.dark-mode pre {
    /* Warna latar yang sedikit lebih terang atau berbeda dari body #222 */
    background-color: #2b2b2b !important;  
    
    /* Penting: Pastikan warna teks default cerah */
    color: #f8f8f2 !important;  
}


/* Ganti blok PRE Anda menjadi ini */
pre {
    border: none !important;
    border-radius: 8px;
    padding: 20px;
    overflow-x: auto;
    font-family: 'Fira Code', 'Monaco', 'Cascadia Code', 'Roboto Mono', 'Courier New', monospace;
    font-size: 0.9em;
    line-height: 1.6;
    margin: 20px 0;
    position: relative;
    white-space: pre-wrap;  
    word-wrap: break-word;
}

/* Ganti blok PRE CODE Anda menjadi ini */
pre code {
    /* Hapus !important agar PrismJS bisa memberi warna sintaks */
    background-color: transparent !important;  
    padding: 0 !important;
    border-radius: 0;
    font-size: inherit;
}

blockquote {
    /* Garis kiri (pinggiran) */
    border-left: 5px solid  #ffeb3b;
    
    /* Warna kuning cerah, sama dengan highlight-yellow */
    padding-left: 15px;
    margin: 20px 0;
    font-style: italic; /* Agar terlihat seperti quote */
}

/* Gaya untuk Dark Mode */
.dark-mode blockquote {
    /* Sesuaikan warna border agar seragam dengan highlight-yellow dark mode */
    border-left-color:  #ffeb3b;
}

code {
    background-color: #f1f3f4;
    color: #d73a49;
    padding: 3px 6px;
    border-radius: 4px;
    font-family: 'Fira Code', 'Monaco', 'Cascadia Code', 'Roboto Mono', 'Courier New', monospace;
    font-size: 0.9em;
    border: none !important;
}

.dark-mode code {
    background-color: #3e3e3e;
    color: #d73a49;
}

pre[data-language]::before {
    content: attr(data-language);
    position: absolute;
    top: 8px;
    right: 12px;
    background-color: rgba(0,0,0,0.1);
    color: #666;
    padding: 2px 8px;
    border-radius: 4px;
    font-size: 0.75em;
    text-transform: uppercase;
    font-weight: 600;
}

.dark-mode pre[data-language]::before {
    background-color: rgba(255,255,255,0.1);
    color: #999;
}

:root {
    --text-color: #222;
    --background-color: #f9f9f9;
    --divider-color: #ccc;
}

.dark-mode {
    --text-color: #f9f9f9;
    --background-color: #222;
    --divider-color: #555;
}

body {
    background-color: var(--background-color) !important;
    color: var(--text-color) !important;
}

.header-sticky-wrapper,
.footer-container {
    background-color: var(--background-color) !important;
}

.divider {
    background-color: var(--divider-color);
}

.icon-dark {
    display: none;
    color: #fff;
}

.icon-light {
    display: inline-block;
    color: #000;
}

.dark-mode .icon-light {
    display: none;
}

.dark-mode .icon-dark {
    display: inline-block;
}

.article-section {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.article-item {
    margin-bottom: 20px;
}

.article-image {
    max-width: 100%;
    height: auto;
    display: block;
    margin: 20px auto 40px auto;
    border-radius: 8px;
}

.article-body img {
    max-width: 100%;
    border-radius: 5px;
    height: auto;
    display: block;
    margin: 15px 0;
}

.article-title {
    font-size: 1.2rem;
    font-weight: 500;
    margin: 0;
    margin-bottom: 5px;
    transition: color 0.5s ease;
}

.article-body {
    font-size: 1rem;
    line-height: 1.6;
    font-weight: 300;
    margin: 0;
    margin-bottom: 15px;
    text-align: justify;
    transition: color 0.5s ease;
}

.article-meta {
    font-size: 0.9rem;
    color: #666;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    gap: 15px;
    font-weight: 300;
    transition: color 0.5s ease;
}

.dark-mode .article-meta {
    color: #aaa; /* Kamu bisa ganti dengan warna abu-abu yang kamu suka */
}

.footer-container {
    width: 100%;
    margin-top: auto;
    position: sticky;
    bottom: 0;
    background-color: #ffffff;
    z-index: 5;
    transition: background-color 0.5s ease;
}

footer {
    padding: 12px 0;
    font-size: 14px;
    font-weight: 300;
    color: inherit;
    text-align: center;
    transition: color 0.5s ease;
}

footer a {
    color: inherit;
    text-decoration: none;
    margin: 0 10px;
    transition: color 0.5s ease;
}

footer a:hover {
    text-decoration: underline;
}

</style>
</head>
<body>

<div class="main-container">
    <div class="header-sticky-wrapper">
      <header class="main-header">
        <div style="display: flex; align-items: center;">
          <div class="typing-container" id="text"></div>
          <div class="cursor"></div>
        </div>

        <button id="theme-toggle" class="theme-toggle" aria-label="Toggle dark mode">
          <svg class="icon-light" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="5"></circle>
            <line x1="12" y1="1" x2="12" y2="3"></line>
            <line x1="12" y1="21" x2="12" y2="23"></line>
            <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
            <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
            <line x1="1" y1="12" x2="3" y2="12"></line>
            <line x1="21" y1="12" x2="23" y2="12"></line>
            <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
            <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
          </svg>
          <svg class="icon-dark" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
          </svg>
        </button>
      </header>
      <hr class="divider">
    </div>

    <div class="header-content">
        {{ content | safe }} 
    </div>

    <div class="footer-container">
      <hr class="divider">
      <footer>
        <a href="https://instagram.com" target="_blank" rel="noopener noreferrer">Instagram</a> | 
        <a href="https://tiktok.com" target="_blank" rel="noopener noreferrer">TikTok</a> | 
        <a href="https://pinterest.com" target="_blank" rel="noopener noreferrer">Pinterest</a>
      </footer>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/prism.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-javascript.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-python.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-html.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-css.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-json.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-markdown.min.js"></script>

<script>
    const sections = ["Baker", "Traveler", "Design", "Memoirss"];
    const textElement = document.getElementById("text");
    let sectionIndex = 0;
    let charIndex = 0;

    function type() {
        const currentText = sections[sectionIndex];
        if (charIndex < currentText.length) {
            textElement.textContent += currentText.charAt(charIndex);
            charIndex++;
            setTimeout(type, 150);
        } else {
            setTimeout(() => {
                textElement.textContent = '';
                charIndex = 0;
                sectionIndex = (sectionIndex + 1) % sections.length;
                type();
            }, 2000);
        }
    }
    type();

    const themeToggle = document.getElementById('theme-toggle');
    const body = document.body;
    const currentTheme = localStorage.getItem('theme');

    if (currentTheme) {
        body.classList.add(currentTheme);
    }

    themeToggle.addEventListener('click', () => {
        body.classList.toggle('dark-mode');

        if (body.classList.contains('dark-mode')) {
            localStorage.setItem('theme', 'dark-mode');
        } else {
            localStorage.setItem('theme', '');
        }
    });

    window.addEventListener('scroll', () => {
        localStorage.setItem('scrollPosition', window.scrollY);
    });

    window.addEventListener('DOMContentLoaded', () => {
        const savedScrollPosition = localStorage.getItem('scrollPosition');
        if (savedScrollPosition) {
            window.scrollTo(0, parseInt(savedScrollPosition));
        }
        
        if (typeof Prism !== 'undefined') {
            Prism.highlightAll();
        }
    });
</script>
</body>
</html>
